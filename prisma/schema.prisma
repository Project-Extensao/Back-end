generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Projeto {
  id_projeto          Int      @id @default(autoincrement())
  modalidade          String
  unidade_origem      String
  titulo_projeto      String
  area_conhecimento   String
  area_tematica       String
  linha_tematica      String
  coord_projeto       String
  email_coord_projeto String
  dt_inicio_proj      DateTime @db.Date // Armazena apenas a data
  dt_fim_proj         DateTime @db.Date // Armazena apenas a data
  situacao            String
  ult_alter_proj      DateTime @db.Date // Armazena apenas a data
  palavras_chave      String
  resumo              String
  parcerias           String?

  @@map("projetos")
}
